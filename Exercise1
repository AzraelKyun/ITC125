#include <iostream>
#include <iomanip>
using namespace std;

int main(){
    int choice, input1, input2;
    double result;
    
    // Show Menu
    cout << "C++ Calculator" << endl << endl;
    cout << "1. Sum" << endl;
    cout << "2. Difference" << endl;
    cout << "3. Product" << endl;
    cout << "4. Quotient" << endl << endl;
    
    // Fetch Operator
    cout << "Choice: ";
    cin >> choice;

    // Clear Screen
    system("cls"); // If Windows
    //system("clear); // If Linux 

    // Fetch Integer to Solve
    cout << "C++ Calculator" << endl << endl;
    cout << "First Integer: ";
    cin >> input1;
    cout << "Second Integer: ";
    cin >> input2;
    
    // Solve Result
    if(choice == 1){
        result = input1 + input2;
    }else if(choice == 2){
        result = input1 - input2;
    }else if(choice == 3){
        result = input1 * input2;
    }else if(choice == 4){
        result = input1 / input2;
    }else{
        exit(0);
    }
    
    // Output Result
    cout << "Result: " << result; 
}
